<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relative_cover"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/img_feature"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:src="@drawable/bg_broder"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#90000000"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/txt_tools_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="afawfwaf"
                android:layout_below="@id/relative_cover"
                android:paddingLeft="10dp"
                android:paddingRight="@dimen/additional_title_padding"
                android:paddingTop="10dp"
                android:maxLines="1"
                android:textColor="@color/triptap2"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/txt_tools_name"
                android:paddingBottom="@dimen/additional_padding_bottom"
                android:paddingLeft="@dimen/additional_title_padding"
                android:paddingRight="@dimen/additional_title_padding"
                android:layout_marginBottom="@dimen/additional_title_padding">

                <RatingBar
                    android:id="@+id/rtbProductRating"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="-60dp"
                    android:numStars="5"
                    android:rating="1"
                    android:scaleX="0.5"
                    android:scaleY="0.5"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>